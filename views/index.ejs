<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<form action="/create" method="post">
<input type="text" placeholder="enter book" name="name"> <br><br>
<input type="text" placeholder="enter price" name="price"><br><br>
<input type="text" placeholder="enter author" name="author"><br><br>

<button>ADD</button>

</form>

  <div class="books d-flex gap-3 mt-3">

  <% Allbook.forEach(function(book){ %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= book.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= book.author %></h6>
      <small><%= book.price %></small>
      <a href="/update/<%= book._id %>" class="card-link">update book</a>
      <a href="/delete/<%= book._id %>" class="card-link text-danger">Delete book</a>
    </div>
  </div>
  <% }) %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
</script>

</body>
</html>
